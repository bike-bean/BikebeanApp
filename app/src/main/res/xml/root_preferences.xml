<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/general_header">

        <EditTextPreference
            app:defaultValue="Default value"
            app:key="edit_text_preference_1"
            app:singleLine="true"
            app:title="Edit text preference"
            app:isPreferenceVisible="false" />

        <EditTextPreference
            app:key="number"
            app:title="@string/number_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="warningNumber"
            app:selectable="false"
            app:singleLine="true"
            app:title="@string/warning_number_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/interval_header">

        <ListPreference
            app:defaultValue="12"
            app:entries="@array/intervall_entries"
            app:entryValues="@array/intervall_values"
            app:key="interval"
            app:title="@string/interval_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/wlan_header">

        <SwitchPreference
            app:defaultValue="false"
            app:icon="@drawable/ic_signal_wifi_4_bar_black_24dp"
            app:key="wlan"
            app:summaryOff="@string/wlan_summary_off"
            app:summaryOn="@string/wlan_summary_on"
            app:title="@string/wlan_title" />

    </PreferenceCategory>

</PreferenceScreen>
