<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- title -->
    <TextView
        android:id="@+id/title"
        style="?attr/titleText"
        android:text="@string/battery_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fragment_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/title" >

        <!-- battery charge -->
        <LinearLayout
            android:id="@+id/batteryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/batteryStatusImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/battery_text"
                android:rotation="90"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_battery_unknown_black_24dp" />

            <TextView
                android:id="@+id/batteryStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- send button -->
                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialSendButton"
                    android:text="@string/button_get_location" />

                <TextView
                    android:id="@+id/moreInfoButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fragment_horizontal_margin"
                    style="?attr/moreInfoButton"
                    android:text="@string/more_information" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>